<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.frozenorb</groupId>
	<artifactId>Foxtrot</artifactId>
	<version>1.0</version>

    <properties>
        <access-level>high</access-level>
    </properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	<distributionManagement>
		<repository>
			<id>minehq-repo</id>
			<url>http://maven.minehq.com/artifactory/${access-level}</url>
		</repository>
		<snapshotRepository>
			<id>minehq-repo</id>
			<url>http://maven.minehq.com/artifactory/${access-level}</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>minehq-repo</id>
			<url>http://maven.minehq.com/artifactory/repo/</url>
		</repository>
	</repositories>

	<dependencies>
		<!-- Spigot Jars -->
		<dependency>
			<groupId>net.frozenorb</groupId>
			<artifactId>mSpigot</artifactId>
			<version>LATEST</version>
		</dependency>
		
		<!-- MineHQ Jars -->
		<dependency>
			<groupId>net.frozenorb</groupId>
			<artifactId>mBasic</artifactId>
			<version>LATEST</version>
		</dependency>
        <dependency>
            <groupId>net.frozenorb</groupId>
            <artifactId>qLib</artifactId>
            <version>LATEST</version>
        </dependency>

		<!-- Misc. Jars -->
        <dependency>
            <groupId>com.comphenix.protocol</groupId>
            <artifactId>ProtocolLib</artifactId>
            <version>LATEST</version>
        </dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>LATEST</version>
		</dependency>
	</dependencies>
</project>